<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/titleRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/futura_round_medium"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="39dp" />

    <TextView
        android:id="@+id/subtitleRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleRegister"
        android:layout_marginLeft="22dp"
        android:fontFamily="@font/exo_medium"
        android:text="Sign up to join our game"
        android:textColor="@color/black"
        android:textSize="17.5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:paddingHorizontal="22dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="38.5dp"
            android:src="@drawable/user_image" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userImage"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"
            android:fontFamily="@font/exo_medium"
            android:hint="Username"
            android:inputType="textCapSentences|textAutoCorrect"
            android:paddingVertical="15dp"
            android:paddingLeft="20dp"
            android:textSize="11.5dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="31dp"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="8dp"
            android:fontFamily="@font/exo_medium"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingVertical="15dp"
            android:paddingLeft="20dp"
            android:textSize="11.5dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="31dp"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/lock"
            android:drawableRight="@drawable/eye"
            android:drawablePadding="8dp"
            android:fontFamily="@font/exo_medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="18dp"
            android:textSize="11.5dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginHorizontal="32.5dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/blue_gradient"
            android:fontFamily="@font/futura_round_medium"
            android:paddingVertical="12.22dp"
            android:text="SIGN IN"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="55dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dont_have_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/exo_medium"
            android:gravity="center"
            android:textColor="@color/subtext"
            android:textSize="12dp" />

    </RelativeLayout>

</RelativeLayout>